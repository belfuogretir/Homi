<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6E3CE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/girisEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/girisParola"
        android:layout_alignLeft="@+id/girisParola"
        android:layout_alignStart="@+id/girisParola"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="59dp" />

    <EditText
        android:id="@+id/girisParola"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/girisButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="129dp" />


    <Button
        android:id="@+id/girisButton"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_above="@+id/yeniSifreButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="#FA8258"
        android:text="Giriş"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/yeniSifreButton"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/sign_in_button"
        android:layout_alignStart="@+id/sign_in_button"
        android:layout_marginBottom="52dp"
        android:background="@null"
        android:text="Şifreni mi unuttun?"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="260dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign_in_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Veya"
        android:textColor="#000000"
        tools:ignore="MissingConstraints"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/uyeOlButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        app:layout_constraintEnd_toEndOf="@+id/girisParola"
        app:layout_constraintHorizontal_bias="1.235"
        app:layout_constraintStart_toStartOf="@+id/girisParola"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/uyeOlButton"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:text="Üye Ol"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="472dp" />


</RelativeLayout>